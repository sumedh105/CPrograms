#include <stdio.h>
#define MAX 1000

int main()
{
	int i, sign, c, index;
	double val, power;
	char str[MAX];

	printf("\nEnter the double number in a character array\n");
	while ((c = getchar()) != EOF)
	{
		str[index++] = c;
	}
	str[index] = '\0';
	printf("\nThe entered array is: %s\n", str);

	val = 0.0;
	index = 0;
	while (str[index] != '.')
	{
		val = val * 10 + (str[index] - '0');
		++index;
	}

	if (str[index] == '.')
	{

	}

	return 0;
}
